package practica2;

import java.util.Random;


public class Procesos implements Runnable {
	
	private String nombre;
	private int posInicial;
	
	public Procesos(String nombre, int posInicial) {
		this.nombre = nombre;
		this.posInicial = posInicial;
	}
	
	@Override
	public void run (){
		Random rnd = new Random();	
		int posFinal = posInicial +10;		
		int alea;
		
		String respuesta = "";
		
		for (int i = posInicial ; posInicial < posFinal ; posInicial++) {				
			Padre.addToArray(posInicial, nombre);
			alea = rnd.nextInt(9); 
			
			respuesta += nombre+" en posicion "+i+", con valor "+alea+", en orden "+Padre.getTotalIntroducidos()+"º";			
			System.out.println(respuesta);		
		}		
	}
}
	
	